
@model string

<link href="~/App_Plugins/EditorTools/Content/bootstrap.css" rel="stylesheet" />
<link href="~/App_Plugins/EditorTools/Content/Site.css" rel="stylesheet" />
<script src="~/App_Plugins/EditorTools/Scripts/jquery-3.1.1.js"></script>
<script src="~/App_Plugins/EditorTools/Scripts/bootstrap.js"></script>

<p></p>
<div class="panel panel-info" id="noDataPanel">
    <div class="panel-heading"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> No Cached Data</div>
    <div class="panel-body">
        <div class="col-md-10">
            <p>
                There is currently no cached data available for this tab. Click Generate to get started. For data that requires the content service (The Content Tab and Page Expiry Tab), this could take a minimum of 30 seconds.
            </p>
            <p>
                Once some data is gnerated and cached you won't have to wait the next time you open this tab.
            </p>
        </div>
        <div class="col-md-2">
            <p><a href="@Model" class="btn btn-primary" type="button" id="GenerateButton">Generate <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></a></p>
        </div>
    </div>
</div>
<div class="panel panel-info" id="GeneratingPanel">
    <div class="panel-heading"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Generating</div>
    <div class="panel-body">
        <div class="col-md-10">
            Processing... Please wait...
        </div>
        <div class="progress progress-striped active" id="ProgressBar">
            <div class="progress-bar " role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                <span class="sr-only">100% Complete</span>
            </div>
        </div>
    </div>
</div>
<script>
    $('#GeneratingPanel').hide();
    $('#GenerateButton').on('click', function (event) {
        $('#GeneratingPanel').show();
        $('#noDataPanel').hide();
    });
</script>
